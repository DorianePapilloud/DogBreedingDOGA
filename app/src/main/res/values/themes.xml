<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DogBreedingDOGA" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/niceGreen_teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EditableText" parent = "Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name = "android:paddingTop">1dp</item>
        <item name = "android:paddingBottom">1dp</item>
        <item name = "android:textSize">15dp</item>
        <item name = "android:textColor">@color/grey</item>
        <item name = "android:minWidth">100dp</item>
        <item name = "android:layout_width">@dimen/dim_ProfileBreederEditable</item>
        <item name = "android:layout_marginLeft">@dimen/dim_ProfileBreederEditableGAP</item>
        <item name = "android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <dimen name="dim_ProfileBreederEditableGAP">25dp</dimen>
</resources>