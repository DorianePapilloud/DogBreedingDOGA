<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewmodel.dog.AddNewDogFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <EditText
            android:id="@+id/et_name_dog"
            android:layout_width="279dp"
            android:layout_height="43dp"
            android:layout_marginTop="@dimen/dim_GapAddDogFrag"
            android:background="@drawable/edit_text_background"
            android:hint="@string/str_DogName"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_add_picture_dog"
            tools:ignore="MissingConstraints" />


        <!--        <Button-->
        <!--            android:layout_width="148dp"-->
        <!--            android:layout_height="150dp"-->
        <!--            tools:layout_editor_absoluteX="130dp"-->
        <!--            tools:layout_editor_absoluteY="469dp"-->
        <!--            android:background=""-->
        <!--            tools:ignore="MissingConstraints" />-->


        <ImageButton
            android:id="@+id/ib_birth"
            android:layout_width="51dp"
            android:layout_height="38dp"
            android:layout_marginTop="@dimen/dim_GapAddDogFrag"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:src="@drawable/ic_calendar"
            android:textSize="16dp"
            android:backgroundTint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.214"
            app:layout_constraintStart_toEndOf="@+id/tv_birth"
            app:layout_constraintTop_toBottomOf="@+id/et_breed"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/et_mother"
            android:layout_width="128dp"
            android:layout_height="43dp"
            android:layout_marginTop="@dimen/dim_GapAddDogFrag"
            android:background="@drawable/edit_text_background"
            android:hint="@string/str_DogMother"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.233"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_birth"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/et_father"
            android:layout_width="125dp"
            android:layout_height="45dp"
            android:background="@drawable/edit_text_background"
            android:hint="@string/str_DogFather"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:textSize="16dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/et_mother"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.769"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="378dp" />

        <Switch
            android:id="@+id/sw_pedigree"
            android:layout_width="127dp"
            android:layout_height="36dp"
            android:layout_marginTop="24dp"
            android:text="@string/str_LabelPedigree"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.767"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_father"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/et_breed"
            android:layout_width="279dp"
            android:layout_height="43dp"
            android:layout_marginTop="@dimen/dim_GapAddDogFrag"
            android:background="@drawable/edit_text_background"
            android:hint="@string/str_DogBreed"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_name_dog"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/iv_add_picture_dog"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/addpicdog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints,UsingOnClickInXml" />

        <TextView
            android:id="@+id/tv_birth"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/dim_GapAddDogFrag"
            android:background="@drawable/edit_text_background"
            android:hint="@string/str_BirthDate"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_breed"
            tools:ignore="MissingConstraints" />

        <RadioGroup
            android:id="@+id/rbg_FemaleMaleRadioBtnGroup"
            android:layout_width="105dp"
            android:layout_height="72dp"
            android:layout_marginTop="@dimen/dim_GapAddDogFrag"
            app:layout_constraintStart_toStartOf="@+id/et_mother"
            app:layout_constraintTop_toBottomOf="@+id/et_mother"
            tools:ignore="MissingConstraints">

            <RadioButton
                android:id="@+id/rb_DogFemale"
                android:layout_width="91dp"
                android:layout_height="35dp"
                android:text="@string/str_DogCheckFemale"
                tools:layout_editor_absoluteX="55dp"
                tools:layout_editor_absoluteY="475dp" />

            <RadioButton
                android:id="@+id/rb_DogMale"
                android:layout_width="92dp"
                android:layout_height="34dp"
                android:text="@string/str_DogCheckMale" />
        </RadioGroup>

        <EditText
            android:id="@+id/et_DogDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/str_DogDescrip"
            android:inputType="textMultiLine"
            android:maxHeight="100dp"
            android:minWidth="280dp"
            android:minHeight="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rbg_FemaleMaleRadioBtnGroup"
            tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_CreateDog"
            android:layout_width="197dp"
            android:layout_height="46dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_background"
            android:text="@string/str_BtnAddDog"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_DogDescription"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_PedigreeInfo"
            android:layout_width="128dp"
            android:layout_height="32dp"
            android:editable="true"
            android:paddingTop="7dp"
            android:text="@string/str_NoPedigree"
            android:textColor="@color/myColor"
            app:layout_constraintEnd_toEndOf="@+id/sw_pedigree"
            app:layout_constraintTop_toBottomOf="@+id/sw_pedigree"
            tools:ignore="MissingConstraints" />

        <CheckBox
            android:id="@+id/cb_availability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:state_checked="true"
            android:text="@string/str_Availability"
            app:layout_constraintBottom_toTopOf="@+id/et_name_dog"
            app:layout_constraintEnd_toEndOf="@+id/et_name_dog"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>