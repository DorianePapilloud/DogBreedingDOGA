<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewmodel.dog.DogDetailsFragment"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="vertical">


        <EditText
            android:id="@+id/tv_dog_details_name_dog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="136dp"
            android:layout_marginEnd="126dp"
            android:background="@null"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Name of the dog"
            android:textColor="@color/myColor"
            android:textSize="20dp" />

        <CheckBox
            android:id="@+id/cb_availabilityDogDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:state_checked="true"
            android:text="@string/str_Availability"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="8dp"
            android:background="@color/myColor" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_breed_24dp"/>
        <TextView
            android:layout_width="@dimen/dim_ProfileDogTVwidth"
            android:layout_height="wrap_content"
            android:text="@string/str_DogBreed"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            />

        <EditText
            android:id="@+id/et_dog_details_breed"
            android:layout_width="@dimen/dim_ProfileDogEditable"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:textSize="15dp"
            android:background="@null"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_gender_24dp"/>
        <TextView
            android:layout_width="@dimen/dim_ProfileDogTVwidth"
            android:layout_height="wrap_content"
            android:text="@string/str_dogGender"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RadioGroup
            android:id="@+id/rbg_FemaleMaleRadioBtnGroupDogDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <RadioButton
                android:id="@+id/rb_DogFemaleDogDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_DogCheckFemale" />

            <RadioButton
                android:id="@+id/rb_DogMaleDogDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_DogCheckMale" />
        </RadioGroup>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_calendar"/>
        <TextView
            android:layout_width="@dimen/dim_ProfileDogTVwidth"
            android:layout_height="wrap_content"
            android:text="@string/str_dogDateOfBirht"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            />

        <EditText
            android:id="@+id/et_dog_details_birth"
            android:layout_width="@dimen/dim_ProfileDogEditable"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/grey"
            android:background="@null"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_parents_24dp"/>
        <TextView
            android:layout_width="@dimen/dim_ProfileDogTVwidth"
            android:layout_height="wrap_content"
            android:text="@string/str_DogMother"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            />

        <EditText
            android:id="@+id/et_dog_details_mother"
            android:layout_width="@dimen/dim_ProfileDogEditable"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/grey"
            android:background="@null"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_parents_24dp"/>
        <TextView
            android:layout_width="@dimen/dim_ProfileDogTVwidth"
            android:layout_height="wrap_content"
            android:text="@string/str_DogFather"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            />

        <EditText
            android:id="@+id/et_dog_details_father"
            android:layout_width="@dimen/dim_ProfileDogEditable"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/grey"
            android:background="@null"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic__star_24dp"/>
        <TextView
            android:layout_width="@dimen/dim_ProfileDogTVwidth"
            android:layout_height="wrap_content"
            android:text="@string/str_DogPedigree"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            />

<!--        <TextView-->
<!--            android:id="@+id/tv_dog_details_pedigree"-->
<!--            android:layout_width="@dimen/dim_ProfileDogEditable"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:textSize="15dp"-->
<!--            android:textColor="@color/grey"-->
<!--            />-->

        <Switch
            android:id="@+id/sw_pedigree_dog_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_LabelPedigree"
            tools:ignore="MissingConstraints"
            />

        <TextView
            android:id="@+id/tv_PedigreeInfoDogDetails"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:editable="false"
            android:paddingTop="7dp"
            android:text="@string/str_NoPedigree"
            android:textColor="@color/myColor"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

    <EditText
        android:id="@+id/et_DogDescriptionDogDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/str_DogDescrip"
        android:inputType="textMultiLine"
        android:maxHeight="100dp"
        android:minWidth="280dp"
        android:minHeight="50dp"
        tools:ignore="MissingConstraints" />



    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_dog_details_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:src="@drawable/plume"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_BtnEditDog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="40dp"
            android:clickable="true"
            android:src="@drawable/ic_edit"
            android:state_focused="true" />

        <ImageView
            android:id="@+id/iv_BtnDeleteDog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="348dp"
            android:clickable="true"
            android:src="@drawable/ic_delete_24dp"
            android:state_focused="true" />

    </RelativeLayout>


</LinearLayout>